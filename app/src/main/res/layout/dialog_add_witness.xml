<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeColor="@color/electric_blue"
    app:strokeWidth="2dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dialog_rounded_corners"
            android:padding="28dp">

        <!-- Title with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_witness"
                android:tint="@color/electric_blue"
                android:layout_marginEnd="12dp" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Witness"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
            
            <!-- "+" Icon Button (Outline Only) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddAnother"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textColor="@color/electric_blue"
                android:textSize="28sp"
                android:textStyle="bold"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="12dp"
                app:strokeColor="@color/electric_blue"
                app:strokeWidth="2dp"
                app:backgroundTint="@android:color/transparent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_weight="0" />
        </LinearLayout>

        <!-- Witnesses List Section -->
        <LinearLayout
            android:id="@+id/witnessListSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/dialog_rounded_corners"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Witnesses Added"
                android:textColor="@color/electric_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerWitnesses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    <!-- Full Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="#1e293b"
        app:boxStrokeColor="@color/electric_blue"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWitnessFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="textCapWords"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Address -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="#1e293b"
        app:boxStrokeColor="@color/electric_blue"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWitnessAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textCapWords"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Contact Number -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="#1e293b"
        app:boxStrokeColor="@color/electric_blue"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWitnessContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number (Optional)"
            android:inputType="phone"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Statement -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:boxBackgroundColor="#1e293b"
        app:boxStrokeColor="@color/electric_blue"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWitnessStatement"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Statement"
            android:inputType="textMultiLine|textCapSentences"
            android:gravity="top"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button Container - Vertical Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="8dp">

        <!-- Save Button - Full Width -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveWitness"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/electric_blue"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_witness"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />

        <!-- Done Button - Full Width -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDoneWitness"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Done"
            android:textColor="@color/electric_blue"
            android:textSize="16sp"
            app:strokeColor="@color/electric_blue"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>
