<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeColor="@color/electric_blue"
    app:strokeWidth="2dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dialog_rounded_corners"
            android:padding="28dp">

        <!-- Title with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_suspect"
                android:tint="@color/electric_blue"
                android:layout_marginEnd="12dp" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Suspect"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
            
            <!-- "+" Icon Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddAnother"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textColor="@color/electric_blue"
                android:textSize="28sp"
                android:textStyle="bold"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:strokeColor="@color/electric_blue"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_weight="0" />
        </LinearLayout>

        <!-- Respondent Info Section (Read-Only) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/respondentInfoSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeColor="@color/electric_blue"
            app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/dialog_rounded_corners"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respondent Information"
                android:textColor="@color/electric_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Respondent Full Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#1e293b"
                    app:strokeColor="@color/electric_blue"
                    app:strokeWidth="1dp">
                    <TextView
                        android:id="@+id/tvRespondentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:padding="12dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Respondent Alias -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alias"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#1e293b"
                    app:strokeColor="@color/electric_blue"
                    app:strokeWidth="1dp">
                    <TextView
                        android:id="@+id/tvRespondentAlias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:padding="12dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Respondent Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#1e293b"
                    app:strokeColor="@color/electric_blue"
                    app:strokeWidth="1dp">
                    <TextView
                        android:id="@+id/tvRespondentAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:padding="12dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Suspects List Section -->
        <LinearLayout
            android:id="@+id/suspectListSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/dialog_rounded_corners"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suspects Added"
                android:textColor="@color/electric_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSuspects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <!-- Add New Suspect Section (Input Fields Container) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/dialog_rounded_corners">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Suspect"
                android:textColor="@color/electric_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundColor="#1e293b"
                app:boxStrokeColor="@color/electric_blue"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSuspectFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="textCapWords"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundColor="#1e293b"
                app:boxStrokeColor="@color/electric_blue"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSuspectAlias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alias"
                    android:inputType="textCapWords"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundColor="#1e293b"
                app:boxStrokeColor="@color/electric_blue"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSuspectAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="textCapWords"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#1e293b"
                app:boxStrokeColor="@color/electric_blue"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSuspectDescription"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Description"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    <!-- Button Container - Vertical Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="8dp">

        <!-- Save Button - Full Width -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveSuspect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/electric_blue"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_suspect"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />

        <!-- Done Button - Full Width -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkipSuspect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Done"
            android:textColor="@color/electric_blue"
            android:textSize="16sp"
            app:strokeColor="@color/electric_blue"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>
