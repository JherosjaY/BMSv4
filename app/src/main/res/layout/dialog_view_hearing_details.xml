<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_top_background"
    android:padding="24dp">

    <!-- âœ… Header with Close Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hearing Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/ivClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="âœ•"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close" />
    </LinearLayout>

    <!-- âœ… Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0f172a"
        android:layout_marginBottom="20dp" />

    <!-- âœ… Case Number / Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/field_background_primary"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case Number"
            android:textSize="12sp"
            android:textColor="#9ca3af"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/tvCaseNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hearing"
            android:textSize="16sp"
            android:textColor="@color/electric_blue"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- âœ… Purpose -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/field_background_primary"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purpose"
            android:textSize="12sp"
            android:textColor="#9ca3af"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/tvPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No purpose specified"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- âœ… Date & Time Row (2x2 Layout) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <!-- Date Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/field_background_primary"
            android:padding="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="12sp"
                android:textColor="#9ca3af"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Date"
                    android:tint="#1e40af"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TBD"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Time Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/field_background_primary"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="12sp"
                android:textColor="#9ca3af"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Time"
                    android:tint="#1e40af"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TBD"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- âœ… Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/field_background_primary"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="12sp"
            android:textColor="#9ca3af"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Location"
                android:tint="#1e40af"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location TBD"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- âœ… Officer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/field_background_primary"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presiding Officer"
            android:textSize="12sp"
            android:textColor="#9ca3af"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person"
                android:contentDescription="Officer"
                android:tint="#1e40af"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tvOfficer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Officer"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- âœ… Status Chip -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/field_background_primary"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="12sp"
            android:textColor="#9ca3af"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            app:chipBackgroundColor="#1e40af"
            app:chipCornerRadius="20dp"
            app:chipStrokeWidth="0dp" />
    </LinearLayout>

    <!-- âœ… Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0f172a"
        android:layout_marginBottom="20dp" />

    <!-- âœ… Info Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“Œ Please ensure your attendance. Bring a valid ID."
        android:textSize="12sp"
        android:textColor="#9ca3af"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/field_background_primary"
        android:textStyle="italic" />

</LinearLayout>
