<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/electric_blue"
    android:padding="2dp">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dialog_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:maxHeight="500dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:padding="28dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Case Resolution"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Empty State -->
                <TextView
                    android:id="@+id/tvEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No resolution documented yet"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone" />

                <!-- Resolution Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardResolutionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/dark_surface"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/electric_blue"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Resolution Type (Bold) -->
                        <TextView
                            android:id="@+id/tvResolutionType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Resolution Type"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Description -->
                        <TextView
                            android:id="@+id/tvResolutionDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:layout_marginTop="8dp" />

                        <!-- Notes (Hidden) -->
                        <TextView
                            android:id="@+id/tvResolutionNotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notes"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <!-- Documented By & Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:id="@+id/tvDocumentedBy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Documented by: Officer"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvDocumentedDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jan 01, 2024 10:30 AM"
                                android:textColor="@color/text_secondary"
                                android:textSize="10sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
